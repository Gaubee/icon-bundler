{
  "name": "icon-bundler",
  "version": "6.2.0",
  "description": "Converts SVG to TTF/EOT/WOFF/WOFF2/SVG format fonts.",
  "homepage": "https://gaubee.github.io/icon-bundler/",
  "funding": "https://gaubee.github.io/#/sponsor",
  "main": "./src/index.ts",
  "typings": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils.ts"
  },
  "type": "module",
  "bin": {
    "icon-bundler": "src/cli.ts"
  },
  "scripts": {
    "-prepare": "npm run build",
    "start": "bun src/index.ts",
    "watch": "tsbb watch src/*.ts",
    "build": "tsbb build src/*.ts --useBabel ",
    "example": "bun examples/example/index.mts",
    "example:cli": "bun src/cli.ts --sources ./examples/example/svg --output ./dist --fontName uiw-font",
    "example:simple": "bun examples/example/simple.mts",
    "example:templates": "bun examples/templates/index.mts",
    "pretest": "npm run example && npm run example:simple && npm run example:templates",
    "checked": "tsc --noEmit",
    "test": "tsbb test",
    "coverage": "tsbb test --coverage"
  },
  "author": "Kenny <wowohoo@qq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaubee/icon-bundler.git"
  },
  "icon-bundler": {
    "css": {
      "fontSize": false
    }
  },
  "keywords": [
    "webfont",
    "font",
    "icon",
    "iconfont",
    "font-face",
    "compress",
    "minify",
    "font-cli",
    "ttf",
    "woff",
    "eot",
    "svg",
    "ttf2eot",
    "ttf2woff",
    "ttf2svg",
    "svg2ttf",
    "css",
    "base64"
  ],
  "license": "MIT",
  "files": [
    "src"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(.*)"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "auto-config-loader": "^2.0.0",
    "cheerio": "~1.0.0-rc.12",
    "colors-cli": "~1.0.28",
    "fs-extra": "~11.2.0",
    "image2uri": "^2.1.2",
    "nunjucks": "^3.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "svg2ttf": "~6.0.3",
    "svgicons2svgfont": "~15.0.0",
    "svgo": "~3.3.0",
    "ts-pattern": "^5.6.2",
    "ttf2eot": "~3.1.0",
    "ttf2woff": "~3.0.0",
    "ttf2woff2": "~6.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/nunjucks": "^3.2.6",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/svg2ttf": "~5.0.1",
    "@types/ttf2eot": "~2.0.0",
    "@types/ttf2woff": "~2.0.2",
    "@types/yargs": "^17.0.33",
    "tsbb": "^4.4.0"
  },
  "peerDependencies": {
    "@types/svg2ttf": "~5.0.1"
  },
  "peerDependenciesMeta": {
    "@types/svg2ttf": {
      "optional": true
    }
  }
}